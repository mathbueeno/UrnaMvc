@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Home" data-trn-key="BREADCRUMB_MENU_PRINCIPAL">Menu Principal</a>
                        </li>
                        <li class="breadcrumb-item active">Candidatos</li>
                    </ol>
                </div>
                <h4 class="page-title">Listagem de candidatos</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-12">
                            <div class="w-85 m-5">
                                <h6 id="ValidacaoGeral" class="text-center text-danger mb-5" style="visibility: hidden"></h6>
                            </div>
                            <div class="input-group"> 
                                <button type="button" id="BotaoAdicionar" class="btn btn-success mr-2 cursor-hand" data-toggle="collapse" data-target="#collapseCampos" aria-expanded="false" aria-controls="collapseCampos">
                                    Adicionar
                                </button>
                                <input type="text" id="TermoPesquisa" class="form-control" placeholder="Pesquise o nome do candidato aqui..." autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="collapse mb-2" id="collapseCampos">
                        <div class="card card-body mb-0 text-sm-left">
                            <div class="row">
                                <div class="col-lg-4 mb-2">
                                    <label for="NomeCompleto"><b>Nome do Candidato</b></label>
                                    <input type="text" id="NomeCompleto" autocomplete="off" class="form-control" maxlength="50">
                                    <h6 id="ValidacaoNomeCompleto" class="text-danger ml-1" style="visibility: hidden">Teste</h6>
                                </div>
                                <div class="col-lg-4 mb-2">
                                    <label for="NomeVice"><b>Nome do vice</b></label>
                                    <input type="text" id="NomeVice" autocomplete="off" class="form-control" maxlength="50">
                                    <h6 id="ValidacaoNomeVice" class="text-danger ml-1" style="visibility: hidden">Teste</h6>
                                </div>
                                <div class="col-lg-4 mb-2">
                                    <label for="Legenda"><b>Legenda</b></label>
                                    <input type="text" id="Legenda" autocomplete="off" class="form-control" maxlength="2">
                                    <h6 id="ValidacaoLegenda" class="text-danger ml-1" style="visibility: hidden">Teste</h6>
                                </div>
                            </div>
                            <hr />
                            <div class="row align-self-end">
                                <button id="BotaoCancelar" type="button" class="btn btn-secondary m-1" data-toggle="collapse" data-target="#collapseCampos" aria-expanded="false" aria-controls="collapseCampos">
                                    Cancelar
                                </button>
                                <button id="BotaoCadastrar" type="button" class="btn btn-success m-1">
                                    Cadastrar
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="Tabela">
                        <partial name="_TabelaPesquisa" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Candidate/index.js"></script>